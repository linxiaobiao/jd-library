view,test,button {
    font-family: Arial,Helvetica,sans-serif;
}

.bd-tb {
    border-top: 1px solid #e7e7e7;
    border-bottom: 1px solid #e7e7e7;
}

.bd-t {
    border-top: 1px solid #e7e7e7;
}

.bd-b {
    border-bottom: 1px solid #e7e7e7;
}

.my-order-viewport {
    background-color: #efeff4;
}

.address-li {
    display: flex;
    border-top: 1px solid #e7e7e7;
    background-color: #fff;
}

.address-li .left {
    width: 62rpx;
    display: flex;
    align-items: center;
}

.address-li .left image {
    display: block;
    background: url('http://commonst.360buyimg.com/common/wx-images/addressul/addressul-sprites.png') no-repeat;
    background-size: 100rpx 100rpx;
    width: 32rpx;
    height: 24rpx;
    margin-left: 20rpx;
    margin-right: 5rpx;
}

.address-li .middle {
    flex: 1;
}

.user-info {
    margin-top: 30rpx;
    font-size: 34rpx;
    color: #000;
    margin-left: 22rpx;
    display: flex;
    height: 36rpx;
    line-height: 36rpx;
    overflow: hidden;
}

.user-name {
    position: relative;
    width: 340rpx;
    overflow: hidden;
    justify-content: center;
    display: inline-block;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user-phone {
    width: 240rpx;
    text-align: right;
}

.address {
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #888;
    margin-left: 22rpx;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    margin-bottom: 24rpx;
    line-height: 38rpx;
}

.address .default {
    display: inline-flex;
    padding: 4rpx 14rpx 0rpx 14rpx;
    background-color: #f02323;
    color: #fff;
    font-size: 24rpx;
    margin-right: 9rpx;
}

.right {
    width: 106rpx;
    display: flex;
    align-items: center;
    margin-left: 26rpx;
}

.right view {
    height: 72rpx;
    border-left: 1rpx solid #e5e5e5;
    display: flex;
    align-items: center;
}

.right image {
    background: url("http://commonst.360buyimg.com/common/wx-images/addressul/addressul-sprites.png") no-repeat;
    background-size: 100rpx 100rpx;
    width: 46rpx;
    height: 46rpx;
    background-position: -50rpx 0;
    margin-left: 38rpx;
}

.address-ul {
    margin-top: 18rpx;
    border-top: 1rpx solid #e7e7e7;
}

.font-color {
    color: #353535;
}

.new-btn {
    margin-top: 58rpx;
    margin-bottom: 50rpx;
    width: 689rpx;
    height: 87rpx;
    background-color: #fff;
    color: #000;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
}

.new-btn image {
    background: url("http://commonst.360buyimg.com/common/wx-images/addressul/addressul-sprites.png") no-repeat;
    background-size: 100rpx 100rpx;
    width: 38rpx;
    height: 38rpx;
    background-position: 0 -50rpx;
    position: relative;
    top: -1rpx;
    margin-right: 18rpx;
}

@import "../../__wuBaseWxss__/7.wxss";