page {
    background-color: #f0f2f5;
}

.facture-page {
    padding-bottom: 100rpx;
}

.facture-top-tip {
    display: flex;
    width: 100%;
    height: 100%;
    background-color: #f17f7f;
    justify-content: center;
    align-items: center;
    padding: 7rpx 0;
}

.facture-top-tip-icon {
    width: 15px;
    background: url(http://commonst.360buyimg.com/common/wx-images/facture-tip-icon.png)no-repeat;
    background-size: 15px 15px;
    height: 15px;
    padding: 0 7px;
    background-position: 7px 0;
}

.facture-top-tip-text {
    flex: 1;
    color: #fff;
    font-size: 22rpx;
    line-height: 32rpx;
}

.facture-top-tip-close {
    width: 62rpx;
    height: 100%;
    color: #fff;
    font-size: 22rpx;
    text-align: center;
}

.facture-floor {
    padding: 28rpx 20rpx;
    background-color: #fff;
    margin-bottom: 14rpx;
}

.facture-floor.input-floor {
    padding: 28rpx 0 0 20rpx;
}

.facture-title-wrap {
    font-size: 0;
    display: flex;
}

.facture-title-wrap.input-title {
    padding-bottom: 30rpx;
}

.facture-title {
    display: inline-block;
    font-size: 26rpx;
    color: #232326;
    line-height: 26rpx;
}

.facture-sec-title {
    display: inline-block;
    flex: 1;
    font-size: 20rpx;
    color: #848689;
    line-height: 26rpx;
    height: 26rpx;
    margin-left: 22rpx;
    vertical-align: top;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.facture-btn-wrap {
    margin-top: 18rpx;
    font-size: 0;
}

.facture-btn {
    display: inline-block;
    height: 54rpx;
    width: auto;
    min-width: 144rpx;
    box-sizing: border-box;
    border: 1rpx solid #b7b8ba;
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #232326;
    line-height: 54rpx;
    padding: 0 22rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    text-align: center;
}

.facture-btn.selected {
    border: 1rpx solid #f23030;
    color: #f23030;
}

.facture-btn.disable {
    border: 1rpx solid #f0f0f0;
    color: #bfbfbf;
}

.facture-tip-text {
    display: inline-block;
    font-size: 20rpx;
    color: #848689;
}

.confirm-btn {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    line-height: 100rpx;
    color: #fff;
    font-size: 36rpx;
    background-color: #f23030;
    text-align: center;
}

.input-floor-item {
    height: 80rpx;
    display: flex;
    position: relative;
}

.input-floor-item::before {
    position: absolute;
    content: '';
    transform: scaleY(0.5);
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    border-top: 1px solid #e3e5e9;
    z-index: 1;
}

.input-floor-item text {
    display: inline-block;
    font-size: 26rpx;
    color: #848689;
    line-height: 80rpx;
    height: 80rpx;
    vertical-align: top;
    margin-right: 26rpx;
}

.input-floor-item input {
    display: inline-block;
    flex: 1;
    height: 80rpx;
    font-size: 26rpx;
    color: #232326;
    line-height: 80rpx;
}

.input-placeholder {
    color: #bfbfbf;
}

.facture-item-more {
    display: inline-block;
    font-size: 20rpx;
    color: #0966f1;
    margin-left: 16rpx;
}

.facture-goods-list-modal {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    z-index: 10;
}

.facture-goods-list-modal .facture-goods-list-content {
    position: relative;
    top: 50%;
    left: 50%;
    width: 630rpx;
    background: #fff;
    z-index: 300;
    border-radius: 14rpx;
    transform: translate(-50%,-50%);
    font-family: Arial,Helvetica,sans-serif;
}

.facture-goods-list-modal .facture-list-modal-tittle {
    font-size: 36rpx;
    color: #232326;
    text-align: center;
    padding: 60rpx 0 35rpx 0;
}

.facture-goods-list-modal .goods-classify-particulars {
    max-height: 470rpx;
}

.facture-goods-list-modal .goods-classify-content {
    padding: 0 38rpx;
}

.facture-goods-list-modal .goods-classify-content-empty {
    height: 130rpx;
    line-height: 64rpx;
    font-size: 30rpx;
    color: #bfbfbf;
    text-align: center;
}

.facture-goods-list-modal .goods-classify-title {
    font-size: 26rpx;
    color: #666;
}

.facture-goods-list-modal .goods-list {
    margin: 22rpx 0 30rpx 0;
    overflow: hidden;
}

.facture-goods-list-modal .goods-item-img {
    width: 158rpx;
    height: 158rpx;
    border-radius: 3pt;
    margin-right: 16rpx;
    border: 1pt solid #e3e5e9;
}

.facture-goods-list-modal .facture-modal-button {
    height: 86rpx;
    line-height: 86rpx;
    font-size: 32rpx;
    color: #f23030;
    text-align: center;
    border-top: 1pt solid #e3e5e9;
}

