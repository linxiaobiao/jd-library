.flex-container {
    display: flex;
    flex-direction: row;
}

.sub-flex-ave {
    flex: 1;
    -webit-flex: 1;
}

.block-item {
    background: #fff;
    margin: 10rpx 0;
    padding: 24rpx;
}

.block-item:first-child {
    margin-top: 0;
}

.block-item.xs {
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}

.flex-view-item {
    flex: 1;
}

.flex-view-item.img {
    width: 291rpx;
    max-width: 291rpx;
}

.flex-view-item.text {
    margin-top: 7rpx;
}

view.span {
    display: inline-block;
}

page {
    background: #efeff4;
    font-family: Arial,Helvetica,sans-serif;
    color: #232326;
}

.t-c {
    text-align: center;
}

.text {
    font-size: 28rpx;
}

.text .ignore {
    color: #888;
}

.text .emphasize {
    color: red;
    font-size: 26rpx;
}

textarea {
    background: #efeff4;
    width: auto;
    padding: 8rpx;
}

.input-wrapper {
    display: inline-block;
}

input {
    width: 100%;
    border-bottom: solid 1rpx #f4f4f8;
    font-size: 28rpx;
    color: #000;
}

label {
    display: inline-block;
    margin-top: 17rpx;
    margin-bottom: 17rpx;
    font-size: 28rpx;
}

label.first {
    margin-top: 0;
}

button.default {
    background: #fff;
}

.btn-wrapper {
    margin: 70rpx 30rpx;
}

.btn-area {
    padding: 0 20rpx;
}

button.no,button.yes {
    margin: 0 30rpx;
}

button.no::after {
    border-color: #000;
}

button.yes {
    color: #1aad19;
}

button.yes::after {
    border-color: #1aad19;
}

.two-btn-wrapper button.last {
    margin-right: 20rpx;
}

.orderSubmitSuccess {
    background: #efeff4;
}

.orderSubmitSuccess-icon {
    width: 211rpx;
    height: 154rpx;
    margin: 0 20rpx 78rpx 60rpx;
    position: relative;
    top: 1rpx;
}

.warning {
    font-size: 30rpx;
    color: #848689;
    margin: 0 41rpx;
}

.pay-detail {
    white-space: nowrap;
    font-size: 32rpx;
}

.pay-detail .item {
    margin-bottom: 27rpx;
}

.block-item.lg {
    padding-top: 88rpx;
    padding-bottom: 60rpx;
    margin-bottom: 60rpx;
}