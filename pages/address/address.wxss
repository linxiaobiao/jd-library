.flex-container {
    display: flex;
    flex-direction: row;
}

.sub-flex-ave {
}

.sub-flex-nevigate {
    flex: 1;
    -webit-flex: 1;
}

.input-name {
    height: 34rpx;
    overflow: hidden;
}

.limit-line {
    display: inline-block;
    flex: 1;
    width: 100%;
    max-width: 100%;
    min-height: 100rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    justify-content: center;
    padding-right: 40rpx;
    box-sizing: border-box;
}

.icon-right-arrow {
    position: absolute;
    right: 18rpx;
    top: 50%;
    width: 20rpx;
    height: 30rpx;
    margin-top: -15rpx;
    background: url(http://commonst.360buyimg.com/common/wx-images/pay_spirit.png) -40rpx 0 no-repeat;
    background-size: 100rpx 80rpx;
}

page {
    height: 100%;
    width: 100%;
    background-color: #efeff4;
}

.address-wrapper {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.input-section {
    padding-left: 20rpx;
    background-color: #fff;
    border-top: 1rpx solid #e5e5e5;
}

.input-section .line {
    font-size: 30rpx;
    color: #000000;
    border-bottom: 1rpx solid #e5e5e5;
    height: 100rpx;
    line-height: 100rpx;
}

.line.last {
    border: none;
    align-items: center;
    height: auto;
}

.line text.sub-flex-ave {
    width: 170rpx;
    max-width: 170rpx;
}

.line input,.line .sub-flex-ave .selectArea {
    width: 100%;
    height: 100%;
}

.line .rt input {
    height: 90rpx;
    line-height: 90rpx;
}

.flex-align {
    display: flex;
    align-items: center;
    flex: 1;
    width: 1%;
}

.line .sub-flex-ave .selectArea {
    box-sizing: border-box;
    padding-right: 50rpx;
    display: inline-block;
}

.belong-address {
    position: relative;
}

.option-section {
    margin-top: 202rpx;
    padding: 0 20rpx;
    overflow: hidden;
}

.cancel {
    float: left;
    color: #404041;
    border: 1rpx solid #404041;
    width: 48%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #fff;
    font-size: 32rpx;
    border-radius: 6rpx;
    text-align: center;
}

.ok {
    float: right;
    color: #22b021;
    border: 1rpx solid #22b021;
    width: 48%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #fff;
    font-size: 32rpx;
    border-radius: 6rpx;
    text-align: center;
}

.okBtn {
    width: 687rpx;
    height: 90rpx;
    color: #fff;
    background-color: #f23030;
}

.belong-address-nav {
    width: 100%;
    padding-left: 170rpx;
    padding-right: 40rpx;
}

.belong-address-text1 {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    line-height: 100rpx;
}

.belong-address-text2 {
    height: 100rpx;
    line-height: 50rpx;
    vertical-align: middle;
    display: -webkit-box;
    -webkit-box-pack: center;
    -webkit-box-align: start;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}