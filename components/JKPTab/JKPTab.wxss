.jkp-tab {
    height: 72rpx;
    border-bottom: 2rpx solid #e3e5e9;
    position: relative;
    z-index: 10;
}

.jkp-tab-menu-open {
    border-bottom: 0px solid #e3e5e9;
}

.jkp-tab-wrap {
    width: 100%;
    height: 100%;
    display: flex;
    background-color: #fff;
}

.jkp-tab-item {
    flex: 1;
    display: inline-block;
    text-align: center;
}

.jkp-tab-title {
    font-size: 26rpx;
    line-height: 26rpx;
    color: #666;
    padding: 22rpx 0 24rpx;
}

.jkp-tab-item.selected .jkp-tab-title {
    color: #f02b2b;
    padding: 22rpx 0 20rpx;
    border-bottom: 4rpx solid #f02b2b;
}

.jkp-tab-wrap-scroll {
    display: block;
    white-space: nowrap;
    position: relative;
}

.jkp-tab-wrap-scroll .jkp-tab-title {
    margin: 0 30rpx;
}

.jkp-tab-wrap-menu {
    padding-right: 88rpx;
    box-sizing: border-box;
}

.menu-top-tip {
    position: absolute;
    left: 0;
    top: 0;
    width: 662rpx;
    height: 74rpx;
    z-index: 15;
    background-color: #fff;
    color: #232326;
    font-size: 26rpx;
    padding-left: 30rpx;
    line-height: 72rpx;
}

.unfold-tab-menu {
    position: absolute;
    right: 0;
    top: 0;
    width: 88rpx;
    height: 72rpx;
    z-index: 15;
    background-color: #fff;
    display: flex;
    align-items: center;
}

.tab-menu-icon {
    width: 88rpx;
    height: 30rpx;
    border-left: 2rpx solid #afafaf;
}

.unfold-tab-menu.up {
    height: 74rpx;
}

.unfold-tab-menu.up .tab-menu-icon {
    background: url(data:image/png;base64,) no-repeat;
    background-size: 30rpx 16rpx;
    background-position: 29rpx 7rpx;
}

.unfold-tab-menu.down .tab-menu-icon {
    background: url(data:image/png;base64,) no-repeat;
    background-size: 30rpx 16rpx;
    background-position: 29rpx 7rpx;
}

.unfold-tab-list {
    position: relative;
    padding: 30rpx 15rpx 9rpx 15rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #e3e5e9;
    z-index: 10;
    max-height: 528rpx;
    overflow: scroll;
}

.unfold-tab-btn {
    width: 150rpx;
    height: 38rpx;
    box-sizing: border-box;
    border: 1rpx solid #9d9fa3;
    border-radius: 18rpx;
    padding: 0 12rpx 0;
    background-color: #fff;
    font-size: 24rpx;
    line-height: 38rpx;
    text-align: center;
    color: #353535;
    display: inline-block;
    margin: 0 15rpx 40rpx 15rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.unfold-tab-btn.selected {
    background-color: #9d9fa3;
    color: #fff;
}